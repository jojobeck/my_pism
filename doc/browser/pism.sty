% This is the place to define all the non-standard LaTeX commands needed in PISM Class browser.

% use the math font that works better with sans-serif text fonts
\usepackage{cmbright}

% partial derivative
\newcommand{\diff}[2]{\frac{\partial #1}{\partial #2}}
% total derivative
\newcommand{\Diff}[2]{\frac{d #1}{d #2}}

% for discretization schemes
\newcommand{\dx}{\ensuremath{\Delta x}}
\newcommand{\dy}{\ensuremath{\Delta y}}
\newcommand{\dz}{\ensuremath{\Delta z}}
\newcommand{\dt}{\ensuremath{\Delta t}}

% for BOMBPROOF:
\newcommand{\Up}[2]{\operatorname{Up}\left(#1\big|#2\right)}
\newcommand{\uppair}[2]{\left\{\begin{matrix} #1 \\ #2 \end{matrix}\right\}}
